<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="280dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="#EEEEEE"
        app:cardElevation="5dp"
        android:id="@+id/CardViewListHealthTips"
        android:layout_marginLeft="30dp">

        <RelativeLayout
            android:layout_width="344dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/recyclerHealthTipsId"
                android:layout_width="31dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="18dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="301dp"
                android:layout_marginRight="301dp"
                android:fontFamily="@font/poppinsmedium"
                android:hint="Id"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/recyclerHealthTipsType"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="49dp"
                android:layout_marginLeft="49dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="47dp"
                android:layout_marginRight="47dp"
                android:layout_marginBottom="206dp"
                android:fontFamily="@font/poppinsmedium"
                android:hint="tips_type"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/recyclerHealthTipsName"
                android:layout_width="239dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="49dp"
                android:layout_marginLeft="49dp"
                android:layout_marginTop="42dp"
                android:layout_marginEnd="62dp"
                android:layout_marginRight="62dp"
                android:hint="tips_name"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/recyclerHealthTipsReferences"
                android:layout_width="279dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="49dp"
                android:layout_marginLeft="49dp"
                android:layout_marginTop="212dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:autoLink="web"
                android:hint="references"
                android:linksClickable="true"
                android:textColor="@color/black"
                android:textSize="11dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/recyclerHealthTipsDesc"
                android:layout_width="281dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="49dp"
                android:layout_marginLeft="49dp"
                android:layout_marginTop="62dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:hint="tips_desc"
                android:textColor="@color/black"
                android:textSize="12dp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>